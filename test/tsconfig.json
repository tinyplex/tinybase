{
  "compilerOptions": {
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "removeComments": true,
    "target": "ESNext",
    "module": "NodeNext",
    "jsx": "react",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "types": [
      "asciichart",
      "jest",
      "node",
      "jest-environment-puppeteer",
      "http-server"
    ],
    "skipLibCheck": true
  }
}
